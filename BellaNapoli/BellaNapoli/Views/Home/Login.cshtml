@model BellaNapoli.Models.Utenti

@{
    ViewBag.Title = "Login";
}


<h2 class="text-center heading mt-3 mb-5">Login</h2>


<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group text-center">
            <p class="p-0 my-2">E-mail</p>
            <div class="col-12 text-center">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control py-1 mx-auto" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center">
            <p class="p-0 my-2">Password</p>
            <div class="col-12 text-center">
                @Html.EditorFor(model => model.Psw, new { htmlAttributes = new { @class = "form-control py-1 mx-auto" } })
                @Html.ValidationMessageFor(model => model.Psw, "", new { @class = "text-danger" })
            </div>
        </div>

        <p class="text-center my-3" style="margin-inline: 20%"><span class="fw-bolder">Non hai ancora un account?</span> Accedi ad un vasta selezione delle nostre migliori pizze <span class="fw-bolder">@Html.ActionLink("registrandoti qui.", "Register", "Home", new {}, new {@class="text-decoration-none"})</span></p>

        <div class="form-group text-center">
            <div class="col-12 ms-auto">
                <input type="submit" value="Login" class="btn btn-success menu-button w-100 my-4" />
            </div>
        </div>
    </div>
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@* ------------------------------ TOASTS --------------------------------- *@

@if (TempData["LoginFail"] != null)
{
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": false,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
        toastr.error('@TempData["LoginFail"]')
    </script>
}

@if (TempData["RegMess"] != null)
{
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": false,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
        toastr.success('@TempData["RegMess"]')
    </script>
}

