<div id="bg-img">
    <div id="pizza">
        <div class="container">
            <div id="title" class="text-center">
                <h1 data-aos="zoom-in">Dal 1996, la vera pizza napoletana direttamente a casa tua</h1>
                <div data-aos="fade-up">
                    <h3 id="subtitle" class="m-4">PIZZERIA BELLA NAPOLI</h3>
                    @Html.ActionLink("Sfoglia il menù", "Index", "Prodotti", new { area = "" }, new { @class = "btn btn-success btn-lg menu-button" })
                </div>
            </div>
        </div>
    </div>
</div>

@* ---------TOASTS--------- *@

@if (TempData["LoginMess"] != null)
{
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": false,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
        toastr.info('@TempData["LoginMess"]')
    </script>
}