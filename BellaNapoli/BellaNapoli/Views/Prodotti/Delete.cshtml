@model BellaNapoli.Models.Prodotti

@{
    ViewBag.Title = "Delete";
}

<div class="container mt-3">
    <h3 class="text-center">Vuoi eliminare il prodotto @Html.DisplayFor(model => model.Nome)?</h3>
    <div class="mt-4  bg-white bg-opacity-50">
        <hr />
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <dl class="row">
                    <dt class="col-sm-4">Nome:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

                    <dt class="col-sm-4">Foto:</dt>
                    <dd class="col-sm-8"><img src="@Model.Foto" class="img-fluid img-thumbnail" alt="Product Image"></dd>

                    <dt class="col-sm-4">Prezzo:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Prezzo)€</dd>

                    <dt class="col-sm-4">Consegna:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Consegna.Minutes) minuti</dd>

                    <dt class="col-sm-4">Ingredienti:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Ingredienti)</dd>
                </dl>
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="form-group text-center">
        @Html.ActionLink("Annulla", "Index", null, new { @class = "btn btn-secondary rounded-0" })
        <input type="submit" value="Conferma" class="btn btn-danger rounded-0" />
    </div>
        }
    </div>
</div>